    <script>
        // Countdown Timer
        let countdownTime = 30 * 60; // 30 minutes in seconds
        const countdownElement = document.getElementById('countdown');
        
        function updateCountdown() {
            const minutes = Math.floor(countdownTime / 60);
            const seconds = countdownTime % 60;
            
            countdownElement.textContent = `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
            
            if (countdownTime <= 0) {
                countdownTime = 30 * 60; // Reset to 30 minutes
                // Show a notification or perform any action when countdown completes
                alert("Special offer has ended! New offers are available now.");
            } else {
                countdownTime--;
            }
        }
        
        setInterval(updateCountdown, 1000);
        
        // Operator Selection
        const operatorCards = document.querySelectorAll('.operator-card');
        const phoneInputSection = document.getElementById('phoneInputSection');
        const plansSection = document.getElementById('plansSection');
        const rechargeDetails = document.getElementById('rechargeDetails');
        const paymentSection = document.getElementById('paymentSection');
        const successMessage = document.getElementById('successMessage');
        
        let selectedOperator = '';
        let selectedPlan = null;
        let phoneNumber = '';
        
        operatorCards.forEach(card => {
            card.addEventListener('click', () => {
                selectedOperator = card.getAttribute('data-operator');
                phoneInputSection.style.display = 'block';
                document.querySelector('.operator-selection').style.display = 'none';
            });
        });
        
        // Next to Plans
        document.getElementById('nextToPlans').addEventListener('click', () => {
            phoneNumber = document.getElementById('phoneNumber').value;
            
            if (phoneNumber.length !== 10 || isNaN(phoneNumber)) {
                alert('Please enter a valid 10-digit mobile number');
                return;
            }
            
            loadPlans(selectedOperator);
            plansSection.style.display = 'block';
            phoneInputSection.style.display = 'none';
        });
        
        // Load Plans
        function loadPlans(operator) {
            const plansContainer = document.getElementById('plansContainer');
            plansContainer.innerHTML = '';
            
            let plans = [];
            
            if (operator === 'vi') {
                plans = [
                    {
                        price: 99,
                        originalPrice: 299,
                        title: 'Vi Hero',
                        validity: '28 days',
                        data: '1 GB/day',
                        details: ['Truly unlimited calls', 'Free night data', 'Weekend data rollover']
                    },
                    {
                        price: 199,
                        originalPrice: 399,
                        title: 'Extra Validity',
                        validity: '54 days',
                        data: '2 GB/day',
                        details: ['Truly unlimited calls', '1 GB/day data', '100 SMS/day']
                    },
                    {
                        price: 299,
                        originalPrice: 499,
                        title: 'Extra Validity',
                        validity: '56 days',
                     data: '2.5 GB/day',
                        details: ['Truly unlimited calls', '4 GB Data', '600 SMS']
                    }
                ];
            } else if (operator === 'jio') {
                plans = [
                    {
                        price: 99,
                        originalPrice: 299,
                        title: 'Jio Prime',
                        validity: '28 days',
                        data: '1.5 GB/day',
                        details: ['Unlimited calls', '1.5 GB/day data', '100 SMS/day']
                    },
                    {
                        price: 199,
                        originalPrice: 399,
                        title: 'Jio Plus',
                        validity: '56 days',
                        data: '2 GB/day',
                        details: ['Unlimited calls', '2 GB/day data', '100 SMS/day']
                    },
                    {
                        price: 299,
                        originalPrice: 499,
                        title: 'Jio Max',
                        validity: '84 days',
                        data: '2.5 GB/day',
                        details: ['Unlimited calls', '2.5 GB/day data', '100 SMS/day']
                    }
                ];
            } else if (operator === 'airtel') {
                plans = [
                    {
                        price: 99,
                        originalPrice: 299,
                        title: 'Airtel Thanks',
                        validity: '28 days',
                        data: '2 GB/day',
                        details: ['Unlimited calls', '2 GB/day data', '100 SMS/day']
                    },
                    {
                        price: 199,
                        originalPrice: 399,
                        title: 'Airtel Extra',
                        validity: '56 days',
                        data: '1.5 GB/day',
                        details: ['Unlimited calls', '1.5 GB/day data', '100 SMS/day']
                    },
                    {
                        price: 299,
                        originalPrice: 499,
                        title: 'Airtel Premium',
                        validity: '84 days',
                        data: '3 GB/day',
                        details: ['Unlimited calls', '3 GB/day data', '100 SMS/day']
                    }
                ];
            }
            
            plans.forEach(plan => {
                const planCard = document.createElement('div');
                planCard.className = 'plan-card';
                planCard.innerHTML = `
                    <div class="plan-price">₹${plan.price} <span>₹${plan.originalPrice}</span></div>
                    <div class="plan-title">${plan.title}</div>
                    <ul class="plan-details">
                        ${plan.details.map(detail => `<li><i class="fas fa-check"></i>${detail}</li>`).join('')}
                    </ul>
                    <div class="plan-validity">Validity: ${plan.validity}</div>
                    <div class="plan-data">Data: ${plan.data}</div>
                `;
                
                planCard.addEventListener('click', () => {
                    document.querySelectorAll('.plan-card').forEach(card => {
                        card.classList.remove('selected');
                    });
                    planCard.classList.add('selected');
                    selectedPlan = plan;
                });
                
                plansContainer.appendChild(planCard);
            });
        }
        
        // Search Plans
        document.getElementById('searchPlans').addEventListener('input', function() {
            const searchTerm = this.value.toLowerCase();
            const planCards = document.querySelectorAll('.plan-card');
            
            planCards.forEach(card => {
                const text = card.textContent.toLowerCase();
                if (text.includes(searchTerm)) {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });
        });
        
        // Continue to Payment
        document.getElementById('continueToPayment').addEventListener('click', () => {
            if (!selectedPlan) {
                alert('Please select a plan');
                return;
            }
            
            document.getElementById('detailOperator').textContent = selectedOperator.toUpperCase();
            document.getElementById('detailNumber').textContent = phoneNumber;
            document.getElementById('detailPlan').textContent = selectedPlan.title;
            document.getElementById('detailPrice').textContent = `₹${selectedPlan.price}`;
            document.getElementById('detailValidity').textContent = selectedPlan.validity;
            document.getElementById('detailData').textContent = selectedPlan.data;
            
            rechargeDetails.style.display = 'block';
            plansSection.style.display = 'none';
        });
        
        // Back to Plans
        document.getElementById('backToPlans').addEventListener('click', () => {
            plansSection.style.display = 'block';
            rechargeDetails.style.display = 'none';
        });
        
        // Payment Method Selection
        const paymentMethods = document.querySelectorAll('.payment-method');
        let selectedPaymentMethod = '';
        
        paymentMethods.forEach(method => {
            method.addEventListener('click', () => {
                paymentMethods.forEach(m => m.classList.remove('selected'));
                method.classList.add('selected');
                selectedPaymentMethod = method.getAttribute('data-method');
            });
        });
        
        // Proceed to Payment
        document.getElementById('proceedPayment').addEventListener('click', () => {
            if (!selectedPaymentMethod) {
                alert('Please select a payment method');
                return;
            }
            
            // In a real application, this would redirect to the payment gateway
            // For demo purposes, we'll just show the success message
            paymentSection.style.display = 'none';
            successMessage.style.display = 'block';
        });
        
        // Back to Details
        document.getElementById('backToDetails').addEventListener('click', () => {
            rechargeDetails.style.display = 'block';
            paymentSection.style.display = 'none';
        });
        
        // New Recharge
        document.getElementById('newRecharge').addEventListener('click', () => {
            successMessage.style.display = 'none';
            document.querySelector('.operator-selection').style.display = 'flex';
            selectedOperator = '';
            selectedPlan = null;
            phoneNumber = '';
            document.getElementById('phoneNumber').value = '';
        });
    </script>
</body>
</html>
